@model MvcMovie.Models.MovieGenreViewModel


@{
    ViewData["Title"] = "Index";
}
<article class="mainPageArticle">
    <h2>Movie Titles</h2>

    <p>
        <a asp-action="Create">Create New Movie Entry</a>
    </p>

    <form asp-controller="Movies" asp-action="Index" method="get">
        <p>
            <select asp-for="MovieGenre" asp-items="Model.Genres" class="searchFields" value="@ViewData["currentGFilter"]">
                <option value="">All</option>
            </select>

            @*Title: <input asp-for="SearchString" class="searchFields" value="@ViewData["currentFilter"]">*@
            Title: <input type="text" name="SearchString" class="searchFields" value="@ViewData["currentFilter"]">
            @*<input type="submit" value="Filter" />*@
            <input type="submit" value="Search" style="color: black;" />

        </p>
        <p><a asp-action="Index">Back to Full List</a></p>
    </form>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.Movies[0].Title)*@
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]" >
                        @Html.DisplayNameFor(model => model.Movies[0].Title)
                    </a>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)*@
                    <a asp-action="./Index" asp-route-sortOrder="@ViewData["DateSort"]">
                        @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Rating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</article>